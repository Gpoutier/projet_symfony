{% extends 'base.html.twig' %}

{% block title %}Hello SortieController!{% endblock %}

{% block body %}
    {{ form_start(formAnnuleSortie) }}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <h1 class="row justify-content-center">Annuler sortie</h1>
            <div class="col-lg-6">
                <p><span class="sortie-label">Nom de la sortie :</span> {{ sortie.nom }}</p>
                <p><span class="sortie-label">Date et heure de la sortie :</span> {{ sortie.dateHeureDebut|date('d/m/Y') }}</p>
                <p><span class="sortie-label">Campus :</span> {{ sortie.campus.nom }}/{{ sortie.campus.nom }}</p>
                <p><span class="sortie-label">Lieu :</span> {{ sortie.lieu.nom }}</p>
                <p><span class="sortie-label">Motif :</span>{{ form_widget(formAnnuleSortie.infosSortie) }}</p>
            </div>
        </div>
    </div>
    <div class="boutonsForm">
        {{ form_widget(formAnnuleSortie.enregistrer) }}
        {{ form_widget(formAnnuleSortie.annuler) }}
    </div>
    {{ form_end(formAnnuleSortie) }}
{% endblock %}
