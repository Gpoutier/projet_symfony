{% extends 'base.html.twig' %}

{% block title %}{{ participant.pseudo }}{% endblock %}

{% block body %}
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <h1 class="text-center"><strong>{{ participant.pseudo }}</strong></h1>
                <p><span class="participant-label">Prenom :</span>{{ participant.prenom }}</p>
                <p><span class="participant-label">Nom :</span>{{ participant.nom }}</p>
                <p><span class="participant-label">Telephone :</span>{{ participant.telephone }}</p>
                <p><span class="participant-label">Mail :</span>{{ participant.mail }}</p>
                <p><span class="participant-label">Campus :</span>{{ participant.campus.nom }}</p>
            </div>
            <div class="d-flex justify-content-center align-items-center">
                <a href="{{ path('app_accueil') }}" class="btn btn-primary">Retour</a>
            </div>
        </div>
    </div>
{% endblock %}
